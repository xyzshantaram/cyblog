{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cyblog-next",
  "version": "0.1.0",
  "identifier": "xyz.shantaram.cyblog-next",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Cyblog",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "msi", "deb"],

    "category": "DeveloperTool",
    "copyright": "Copyright ©️ 2023- Siddharth Singh",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
